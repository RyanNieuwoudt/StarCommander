{
	"compilerOptions": {
		"baseUrl": "./src/",
		"target": "es2020",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"lib": ["es2015", "dom"],
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"]
}
